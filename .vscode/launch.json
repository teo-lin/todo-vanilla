{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "vanilla:app",
      "runtimeExecutable": "nodemon",
      "runtimeArgs": [
        "--inspect-brk=9229", // Use --inspect-brk to break at the first line
        "--delay",
        "2", // Optional: Add a delay to prevent nodemon from restarting too quickly
        "src/app.ts" // Path to your TypeScript entry file
      ],
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
